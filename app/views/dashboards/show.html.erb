
<% if @recent_post %>
  <%= render partial: 'my_post_show'%>
  
<% elsif @emotion %>
  <%= render partial: 'emotion_form_B', locals: {emotion: @emotion.first, definition: @emotion.last} %>

<% else %>
  <h1>Welcome, <%=current_user.name%>!</h1>
  <h2>How are you doing?</h2>
  <%= render partial: 'emotion_form_A' %>
<% end %>
<% if @recent_post %>
  <%= link_to 'Create new post', dashboard_path(post: 'new_post') %>
<% end %>
<ul id='pending_requests'>
  <% if @pending_requests.empty? %>
    <h4>No Pending Requests</h4>
  <% else%>
    <% @pending_requests.each do |user| %>
      <li id="friend_<%=user.id%>">
        <%=user.name%>:
        <%=button_to 'Accept', dashboard_path, method: :get, params: {follower: user.id, request_status: 'accepted'}, local: true %>
        <%=button_to 'Reject', dashboard_path, method: :get, params: {follower: user.id, request_status: 'rejected'}, local: true %><br>
      </li>
    <% end%>
  <% end%>
</ul>