  <div id='emotion_def'>
    <h2>I am feeling <%= @emotion.word %>:</h2>
    <p> <%= @emotion.definition %></p>
  </div>
  <%=link_to 'Change emotion choice', url: dashboard_path %>

  <h3>Take a moment and jot down some of your thoughts about this<h3>
  <div id='emotion_form'>
    <%= form_with url: dashboard_path, method: :get do |f| %>
      <%= f.text_area :description, size: "60x10" %><br>
      <p>Would you like to make this post public?
      <%= f.label :post_status, 'Yes', value: 'public'%>
      <%= f.radio_button :post_status, 'public' %>
      <%= f.label :post_status, 'No', value: 'private'%>
      <%= f.radio_button :post_status, 'private', checked: true %>
      </p>
      <%= f.hidden_field :emotion_id, value: @emotion.id%>
      <%= f.submit 'submit' %>
    <% end %>
  </div>