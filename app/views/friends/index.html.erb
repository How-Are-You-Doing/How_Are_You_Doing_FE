<div id="find_friend_form">
  <%= form_with url: '/friends', method: :get, local: true do |f| %>
    <%= f.label :email, 'Email' %>
    <%= f.text_field :email %>
    <%= f.submit 'Find Friend' %>
  <% end %>
</div>
<% if @users %>
  <div id="search_results">
    <% if @users == [] %>
      <p>No search results</p>
    <% else %>
      <%= @users.name %>
    <% end%>
  </div>
<% end %>

<div id="friends_list">
  <h3>Friend List</h3>
  <% @friends.each do |friend| %>
    <%= friend.name %>
  <% end %>
</div>
